@using AkdmQPortfolio.Data
@model List<SkillTable>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">

    <!-- Başlık ve Buton -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark">Yetenekler</h4>
        <a href="/Skill/CreateSkill" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Yeni Yetenek
        </a>
    </div>

    <!-- Tablo -->
    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Seviye</th>
                        
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                   @* Döngü kurulacak *@
                   @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SkillId</td>
                            <td>@item.Title</td>
                            <td style="width: 250px;">
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar
                                         @(item.Levels < 40 ? "bg-danger" :
                                           item.Levels < 70 ? "bg-warning" : "bg-success")"
                                         role="progressbar"
                                         style="width: @item.Levels%;"
                                         aria-valuenow="@item.Levels"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @item.Levels%
                                    </div>
                                </div>
                            </td>

                            <td class="text-center">
                                <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-sm btn-outline-success me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bu deneyimi silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>

